class URI(object):
    def __init__(self, host, port, protocol='http'):
        self.host = host
        self.port = port
        self.protocol = protocol

    def __str__(self):
        return ((self.protocol + "://") if self.protocol else "") + self.host + ":" + str(self.port)

class DB(URI):
    def __init__(self, host, port, username, password):
        super().__init__(host, port, None)
        self.username = username
        self.password = password

